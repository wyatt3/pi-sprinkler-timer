{
    "name": "pi-sprinkler-timer",
    "version": "1.0.0",
    "description": "Multi-relay controller with scheduling, sqlite persistence, and websockets (onoff GPIO)",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "dev:api": "nodemon src/server.js",
        "dev:web": "vite --config client/vite.config.js",
        "dev": "concurrently \"npm:dev:api\" \"npm:dev:web\"",
        "build": "vite build --config client/vite.config.js",
        "start": "node src/server.js"
    },
    "dependencies": {
        "@vitejs/plugin-vue": "^6.0.1",
        "better-sqlite3": "^8.0.0",
        "dotenv": "^16.0.0",
        "express": "^4.18.2",
        "onoff": "^6.0.0",
        "socket.io": "^4.7.2",
        "vite": "^7.2.2",
        "vue": "^3.5.24"
    },
    "devDependencies": {
        "nodemon": "^3.1.11",
        "concurrently": "^9.2.1"
    }
}
